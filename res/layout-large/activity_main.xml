<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/pattern" >

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="910dp"
            android:layout_height="300dp"
            android:layout_below="@+id/logo_but"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/slider_frame" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="290dp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="290dp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="290dp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="290dp"
                android:layout_marginTop="5dp" />
        </FrameLayout>

        <Button
            android:id="@+id/tap"
            android:layout_width="710dp"
            android:layout_height="99.975dp"
            android:layout_alignLeft="@+id/frameLayout1"
            android:layout_alignParentBottom="true"
            android:background="@drawable/tap_button" />

        <Button
            android:id="@+id/login"
            android:layout_width="170dp"
            android:layout_height="99.975dp"
            android:layout_alignRight="@+id/frameLayout1"
            android:layout_alignParentBottom="true"
            android:background="@drawable/login_email" />

        <ImageView
            android:id="@+id/partner_logo"
            android:layout_width="330dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
             android:layout_marginTop="20dp"
            android:layout_alignRight="@+id/frameLayout1"
            android:src="@drawable/logobox" />

        <Button
            android:id="@+id/logo_but"
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/logo" />

        <ImageView
            android:id="@+id/partlogo"
            android:layout_width="270dp"
            android:layout_height="80dp"
             android:layout_marginTop="55dp"
             android:layout_marginLeft="667dp"/>

    </RelativeLayout>

</RelativeLayout>