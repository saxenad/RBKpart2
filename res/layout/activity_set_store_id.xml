<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SetStoreId" >

    <EditText
        android:id="@+id/RequiresInternet"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/store_id_dy"
        android:layout_centerHorizontal="true"
        android:ems="10"
         android:singleLine="true"
        android:maxLines="1"
        android:hint="Enter false if no interent required" />

    <Button
        android:id="@+id/home_setstore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="50dp"
        android:text="Home" />

    <EditText
        android:id="@+id/store_id_dy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/RequiresInternet"
        android:layout_alignRight="@+id/RequiresInternet"
        android:layout_below="@+id/home_setstore"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="Enter Store Id"
         android:singleLine="true"
        android:maxLines="1"
        android:inputType="number" >

        <requestFocus />

    </EditText>

    <Button
        android:id="@+id/set"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RequiresInternet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:text="set store id" />

    <EditText
        android:id="@+id/color_app"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/RequiresInternet"
        android:layout_centerVertical="true"
        android:ems="10"
        android:singleLine="true"
        android:maxLines="1"
        android:hint="Enter the backgroud color for the entire app" />

    <EditText
        android:id="@+id/alt_col"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/color_app"
        android:layout_alignRight="@+id/color_app"
        android:layout_below="@+id/color_app"
        android:ems="10"
        android:hint="Enter the alt color"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true" />

</RelativeLayout>
